datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  recipeId           String   @id @default(uuid())
  name               String
  notes              String?
  sourceType         String
  onlineSourceUrl    String?
  offlineSourceTitle String?
  offlineSourcePage  Int?
  diet               String
  prepTime           String
  seasonsSpring      Boolean?
  seasonsSummer      Boolean?
  seasonsFall        Boolean?
  seasonsWinter      Boolean?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  tags               Tag[]
}

model Tag {
  tagId   String   @id @default(uuid())
  name    String   @unique
  recipes Recipe[]
}
